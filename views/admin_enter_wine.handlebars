<div class="container-fluid" id="add_wine">
  <h1>Add Wine</h1>
	
		
</div>

   {{#each new_wine}}
     <center><h3>Added {{wine}} successfully</h3></center>
   {{/each}}
 </div>

<form>
  <div class="form-group">
    <label for="enterWinery">Enter Winery</label>
    <input type="winery" class="form-control" id="winery" placeholder="Winery">
  </div>
  <div class="form-group">
    <label for="enterVarietal">Enter Varietal (If applicable)</label>
    <input type="varietal" class="form-control" id="varietal" placeholder="Varietal">
  </div>
  <button type="submit" class="btn btn-default" id="submitBtn">Submit</button>
</form>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Add Wine</h4>
      </div>
      <form id="add_wine-name" action="/manual_add" method="post">
			
      <div class="modal-body">
	        <div class="form-group">
            <label for="recipient-name" class="control-label" name="name">Name</label>
            <input type="text" class="form-control" id="name" name="name">
          </div>

          <div class="form-group">
            <label for="recipient-name" class="control-label" name="winery">Winery</label>
            <input type="text" class="form-control" id="winery" name="winery">
          </div>
          <div class="form-group">
            <label for="recipient-name" class="control-label" name="varietal">Varietal</label>
            <input type="text" class="form-control" id="varietal" name="varietal">
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" id="add" >Add</button>
      </div>
     </form>
			
    </div>
  </div>
</div>



 
